@model ExamenSistemaGestion_Entidades.ClsPlanta

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Actualizar</title>
</head>
<body>

<h4>ClsPlanta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Actualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                @Html.DisplayFor(model => model.Nombre)
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                @Html.DisplayFor(model => model.Descripcion)
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" value=" @Model.Precio" class="form-control" />
                @Html.ValidationMessageFor(model => model.Precio)<!--El mensaje no se muestra-->
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Volver atras","Index","Categorias")
</div>

</body>
</html>
