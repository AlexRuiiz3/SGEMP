
@{
    Layout = null;
}

@model  BonusTrack.Models.PlantasVM

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Plantas</title>
</head>
<body>
    <form method="post">
        <select name="selectPlantas" multiple>
            @for (int i = 0; i < Model.NombresPlantas.Count; i++)
            {
            <option value="@Model.NombresPlantas.ElementAt(i)">
                @Model.NombresPlantas.ElementAt(i)
            </option>
            }
        </select>
        <br />
        <textarea rows="5" cols="70">@Model.Detalles</textarea><!--rows = altura cols = ancho -->

        <br />
        <button type="submit">Ver Detalles</button> 
    </form>
</body>
</html>
